@model IEnumerable<MovieMVC2.Models.Actor>

@{
    ViewBag.Title = "Actors";
}

<h2>Actors</h2>

<p>
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
            @{
                DateTime dob = Convert.ToDateTime(item.BirthDate);
                DateTime PresentYear = DateTime.Now;
                TimeSpan ts = PresentYear - dob;
                DateTime Age = DateTime.MinValue.AddDays(ts.Days);
            }
            (@Age.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span> @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
